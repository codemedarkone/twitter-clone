<div class="row">
  <div class="col-sm-12">
    <div class="jumbotron mt-4">
      <%= @username %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="card">
      <div class="card-block">
        <p>profile</p>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <%= render 'components/post_form' %>

  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-block">
        <p><%= post.content %></p>
      </div>
    </div>
    <% end %>
  </div>

  <div class="col-sm-3">
    <div class="card">
      <div class="card-block">
        <p>who to follow</p>
      </div>
    </div>
    <div class="card mt-4">
      <div class="card-block">
        <p>trends</p>
      </div>
    </div>
  </div>
</div>
